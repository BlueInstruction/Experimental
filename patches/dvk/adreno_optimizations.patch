diff --git a/src/dxvk/dxvk_memory.cpp b/src/dxvk/dxvk_memory.cpp
index abc1234..def5678 100644
--- a/src/dxvk/dxvk_memory.cpp
+++ b/src/dxvk/dxvk_memory.cpp
@@ -89,6 +89,16 @@ namespace dxvk {
     uint32_t typeIndex,
     VkDeviceSize size,
     DxvkMemoryFlags flags) {
+  
+  // Adreno optimization: Reduce chunk size for mobile GPUs
+  const auto& props = m_device->adapter()->deviceProperties();
+  bool isAdrenoGPU = props.core.properties.vendorID == 0x5143;
+  
+  if (isAdrenoGPU && size > 256 << 20) {
+    // Limit to 256MB chunks on Adreno to reduce fragmentation
+    size = 256 << 20;
+    Logger::info("DXVK: Using reduced chunk size for Adreno GPU");
+  }
   
   DxvkMemoryChunk* chunk = nullptr;
   
diff --git a/src/dxvk/dxvk_pipemanager.cpp b/src/dxvk/dxvk_pipemanager.cpp
