+++ b/src/dxvk/dxvk_pipemanager.cpp
@@ -156,6 +156,15 @@ namespace dxvk {
   uint32_t cpuCount = dxvk::thread::hardware_concurrency();
   uint32_t numCompilers = (cpuCount - 1) / 2;
   
+  // Adreno optimization: Reduce compiler threads on mobile
+  const auto& props = m_device->adapter()->deviceProperties();
+  bool isAdrenoGPU = props.core.properties.vendorID == 0x5143;
