diff --git a/src/dxvk/dxvk_context.cpp b/src/dxvk/dxvk_context.cpp
index abc1234..def5678 100644
--- a/src/dxvk/dxvk_context.cpp
+++ b/src/dxvk/dxvk_context.cpp
@@ -456,6 +456,23 @@ namespace dxvk {
     VkAccessFlags srcAccess,
     VkAccessFlags dstAccess) {
   
+  // patch: Force barriers on Adreno tiled GPUs
+  // This fixes rendering glitches on SD 8 Gen 3 (Adreno 750)
+  const auto& deviceProperties = m_device->adapter()->deviceProperties();
+  bool isAdrenoGPU = deviceProperties.core.properties.vendorID == 0x5143; // Qualcomm
+  
+  if (isAdrenoGPU) {
+    Logger::info("DXVK: Using tiled GPU render pass barriers");
+    
+    VkMemoryBarrier barrier = { };
+    barrier.sType = VK_STRUCTURE_TYPE_MEMORY_BARRIER;
+    barrier.srcAccessMask = srcAccess;
+    barrier.dstAccessMask = dstAccess;
+    
+    m_cmd->cmdPipelineBarrier(
+      DxvkCmdBuffer::ExecBuffer, srcStages, dstStages,
+      0, 1, &barrier, 0, nullptr, 0, nullptr);
+  }
 }
 
 
diff --git a/src/dxvk/dxvk_adapter.cpp b/src/dxvk/dxvk_adapter.cpp
index abc1234..def5678 100644
--- a/src/dxvk/dxvk_adapter.cpp
+++ b/src/dxvk/dxvk_adapter.cpp
@@ -234,6 +234,13 @@ namespace dxvk {
 bool DxvkAdapter::shouldUseDescriptorBuffer() const {
   // Original code enables descriptor buffer on modern GPUs
   
+  // patch: Disable on Adreno 750 (SD 8 Gen 3)
+  // Causes stability issues with Vulkan 1.3.128
+  if (m_deviceInfo.core.properties.deviceID == 0x43051000) {
+    Logger::info("DXVK: Disabling descriptor buffer for Adreno 750");
+    return false;
+  }
+  
   return m_deviceFeatures.extDescriptorBuffer.descriptorBuffer &&
          m_deviceFeatures.khrBufferDeviceAddress.bufferDeviceAddress;
 }
