diff --git a/src/freedreno/ir3/ir3_cse.c b/src/freedreno/ir3/ir3_cse.c
--- a/src/freedreno/ir3/ir3_cse.c
+++ b/src/freedreno/ir3/ir3_cse.c
@@ -1,3 +1,4 @@
+/* Dragon: Falcon A750 CSE Fix - Common Subexpression Elimination fix */
 
 /* Fix CSE issues on Adreno 750 that cause shader corruption */
 
@@ -80,6 +81,18 @@ ir3_cse_run(struct ir3 *ir)
    /* A750 CSE workaround */
+   
+   /* Check for problematic patterns on A750 */
+   if (ir->compiler->gpu_id >= 750) {
+       /* Disable aggressive CSE that causes issues */
+       ir->cse_aggressive = false;
+       
+       /* Use conservative CSE mode */
+       ir->cse_mode = IR3_CSE_CONSERVATIVE;
+       
+       /* Skip CSE for certain instruction types */
+       ir->cse_skip_mask |= IR3_CSE_SKIP_LDGB;
+       ir->cse_skip_mask |= IR3_CSE_SKIP_ATOMIC;
+   }
 
 diff --git a/src/freedreno/vulkan/tu_shader.cc b/src/freedreno/vulkan/tu_shader.cc
--- a/src/freedreno/vulkan/tu_shader.cc
+++ b/src/freedreno/vulkan/tu_shader.cc
@@ -1,3 +1,4 @@
+/* Dragon: Falcon A750 CSE Fix - Shader compilation adjustments */
 
@@ -120,6 +121,10 @@ tu_shader_compile(struct tu_shader *shader)
    /* A750 shader compilation fixes */
+   if (shader->device->physical_device->info->chip >= 7) {
+       /* Use safe optimization level */
+       shader->opt_level = MIN2(shader->opt_level, 2);
+   }
